<% var js_include = ['create_grating.js']; %>
<% include header%>

<% if(rs.length > 0) { %>
<form method="post" action="TGames/dropdown">

    <label for="UserID">User</label>
    <select id="UserID" name="UserID">
        <% for (var i=0; rs.length > i; i++) { %>

        <option value="<%= rs[i].UserID %>">
            <%= rs[i].Username %>
        </option>

        <% } %>
    </select>



    <label for="GameID">Game</label>
    <select id="GameID" name="GameID">
        <% for (var i=0; r2.length > i; i++) { %>
        <option value="<%= r2[i].GameID %>">
            <%= r2[i].Title %>
        </option>
        <% } %>
    </select>


    <label for="Rating">Rating</label>
    <select id="Rating" name="Rating">
        <% for (var i=1; i < 6; i++) { %>
        <option value="<%= i %>">
            <%= i %>
        </option>
        <% } %>
    </select>
    <input type="button" id="createGRatingBtn" value="Create" />
</form>

<% } else { %>
The table does not contain any records.
<% } %>

<div id="output" style="margin:10px;display:none"></div>

<% include footer %>