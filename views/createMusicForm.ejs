<% // create a list of javascript files to have the header load %>
<% var js_include = ['create_music.js']; %>
<% include header %>

<!-- Note that this is a post -->
<form id="create_music_form" action="<%= action %>">
    <table id="login">
        <tr><td>Title:</td>
            <td><input type="text" id="Title" name="Title" /></td>
        </tr>
        <tr><td>Genre:</td>
            <td><input type="text" id="Genre" name="Genre" /></td>
        </tr>
        <tr><td>Composer:</td>
            <td><textarea id="Composer" name="Composer"></textarea></td>
        </tr>
    </table>
    <!-- not that we use a button here and not submit -->
    <input type="button" id="createMusicBtn" value="Create" />
</form>

<div id="output" style="margin:10px;display:none"></div>

<% include footer %>