<% // create a list of javascript files to have the header load %>
<% var js_include = ['create_student.js']; %>
<% include header %>

<!-- Note that this is a post -->
<form id="create_user_form" action="<%= action %>">
    <table id="login">
        <tr><td>Title:</td>
            <td><input type="text" id="Title" name="Title" /></td>
        </tr>
        <tr><td>Genre:</td>
            <td><input type="text" id="Genre" name="Genre" /></td>
        </tr>
        <tr><td>City:</td>
            <td><textarea id="City" name="City"></textarea></td>
        </tr>
        <tr><td>State:</td>
            <td><textarea id="State" name="State"></textarea></td>
        </tr>
        <tr><td>Country:</td>
            <td><textarea id="Country" name="Country"></textarea></td>
        </tr>
    </table>
    <!-- not that we use a button here and not submit -->
    <input type="button" id="createStudentBtn" value="Create" />
</form>

<div id="output" style="margin:10px;display:none"></div>

<% include footer %>